/* components/card-info/card-info.wxss */

.card-info-container{
    padding: 40rpx;
    /* width: 320rpx; */
    /* height: 250px; */
    background:#ccc;
    border-radius: 10rpx;
}
.card-info-top{
    display: flex;
     flex-wrap:nowrap;
     justify-content:space-between;
}

.left-info{
     flex-grow:1;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
}

.header-logo-container{
    width: 120rpx;
    height: 120rpx;
    display: inline-block;
}
.header-logo{
    width: 100%;
    height: 100%;
}
.icon-img{
    width: 20rpx;
    height: 20rpx;

}
.address{
    display: flex;
    justify-content: space-between;

}
.address view:first-child{
    flex-grow: 1;
    
}
.scan-card{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
}
.scan-card text{
    padding: 10rpx 0;
    color: #fff;
    font-size: 28rpx;
}
.scan-card .scan-code{
   width: 200rpx;
   height: 200rpx;

}
.rotate-text{
    transform: rotateZ(180deg)
}

.send-card{
    width: 300rpx;
    background: #fffedd;
}


