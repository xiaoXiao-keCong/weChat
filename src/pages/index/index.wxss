/**index.wxss**/
@import '../../components/card-info/card-info';

.container {
    /* padding: 20px; */
    padding-left: 40rpx;
    padding-right: 40rpx;
    padding-top: 40rpx;
}

.creat-card-btn {
    width: 280rpx;
    background: #5abec8;
    font-size: 26rpx;
    color: #fff;
    text-align: center;
    line-height: 60rpx;
}

.content {
    width: 100%;
    border-radius: 5px;
}

.index-phone-number {
    height: 24rpx;
    margin-bottom: 12rpx;
    background: #e2e2e2;
    width: 200rpx;
}

.one {
    margin-bottom: 58rpx;
}

.two {
    width: 240rpx;
}

.fourth {
    width: 160rpx;
    margin-bottom: 42rpx;
}

.border {
    border-bottom: 1px solid #979797;
    box-shadow: inset 0 -1px 0 0 #e2e2e2;
    margin-bottom: 20rpx;
}
