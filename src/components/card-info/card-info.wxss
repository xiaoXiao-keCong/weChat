/* components/card-info/card-info.wxss */

.card-info-container {
    padding: 40rpx 60rpx;
    background: #fff;
    border-radius: 10rpx;
    position: relative;
}

.card-info-top {
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-between;
}

.left-info {
    flex-grow: 1;
    padding-top: 20rpx;
    padding-bottom: 15rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.left-info text:last-child {
    font-size: 28rpx;
    color: #333;
    text-align: justify;
    line-height: 32rpx;
}

.header-logo-container {
    width: 120rpx;
    height: 120rpx;
    display: inline-block;
}

.header-logo {
    width: 100%;
    height: 100%;
}

.icon-img {
    width: 28rpx;
    height: 34rpx;
    vertical-align: middle;
    margin-right: 8rpx;
}

.setting {
    width: 36rpx;
    height: 36rpx;
}

.address {
    display: flex;
    justify-content: space-between;
}

.address view:first-child {
    flex-grow: 1;
}

.scan-card {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
}

.scan-card text {
    padding: 20rpx 0;
    font-size: 22rpx;
    color: #838383;
}

.scan-card .scan-code {
    width: 160rpx;
    height: 160rpx;
}

.rotate-text {
    transform: rotateZ(180deg);
}

.send-card {
    width: 300rpx;
    background: #fffedd;
}

.default-color {
    font-size: 24rpx;
    color: #838383;
}

.position text, .address text {
    min-width: 200rpx;
    display: inline-block;
    line-height: 28rpx;
}

.address text {
    min-width: 240rpx;
}

.no-content {
    background: #e2e2e2;
}
.card-status-img{
    position: absolute;
    right: 0;
    top: 0;
    width: 96rpx;
    height: 96rpx;
}