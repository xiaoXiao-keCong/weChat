/* 自定义按钮样式 */
.self-switch {
    width: 100rpx;
    height: 40rpx;
    display: inline-block;
    position: relative;
    border-radius: 100rpx;
    background: #5ABEC8 ;
    align-self: right;
}
.self-switch::before{
     width: 40rpx;
    height: 40rpx;
    content:'';
    display: inline-block;
    position: absolute;
    left: 0;
    background: #fff;
    border-radius: 50%;
    transition: all 0.3s;
}
.self-switch.checked::before{
    transform: translateX(60rpx);
}

